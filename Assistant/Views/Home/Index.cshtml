@model IQueryable<Orders>

@{
    ViewData["Title"] = "Home";
}    

<div class="row">
    @foreach (var item in Model)
    {
    <!-- Cards START -->
        <div class="col-sm-6 my-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@item.Customers.FirstName</h4>
                    <p class="card-text">@item.Description</p>
@*                    <a href="order?orderId=@item.Id" class="btn btn-primary">View order</a>*@
                    @Html.ActionLink("View order", "Index", "Order", new {@orderId = @item.Id}, new{@class = "btn btn-primary" })
                </div>
            </div>
        </div>
    <!-- Cards END -->
    }
</div> 